# World Location regular expression
<% # This captures most of them - specific overrides are covered in `internal_redirects`%>
location /world/ {
  rewrite ^/world/([a-z0-9-]+)$ /government/world/$1 permanent;
}

<%- external_redirects.each do |from, to| -%>
location ~ ^<%= from %>/?$ {
  expires 1d;
  add_header cache-control 'public';
  return 302 <%= to %>;
}
<%- end -%>

<%- internal_redirects.each do |from, to| -%>
location ~ ^<%= from %>/?$ {
  expires 1d;
  add_header cache-control 'public';
  return 301 <%= to %>;
}
<%- end -%>

<%- prefix_redirects.each do |from, to| -%>
location ~ ^<%= from %>($|/.*) {
  expires 1d;
  add_header cache-control 'public';
  return 301 <%= to %>$1;
}
<%- end -%>

