define host {
        use                  <%= @use %>
        alias                <%= @hostalias %>
        address              <%= @address %>
        display_name         <%= @display_name %>
        host_name            <%= @host_name %>
        hostgroups           all
        notification_period  <%= @notification_period %>
        contact_groups       <%= @contact_groups %>
        <%- if @parents -%>
        parents              <%= @parents %>
        <%- end -%>
}
