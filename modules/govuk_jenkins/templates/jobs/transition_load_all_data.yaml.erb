---
- job:
    name: Transition_load_all_data
    display-name: Transition_load_all_data
    project-type: freestyle
    description: "<p>Loads mapping data and statistics into Transition/Bouncer.</p>"
    logrotate:
      numToKeep: 30
    properties:
      - build-discarder:
          days-to-keep: 30
          artifact-num-to-keep: 5
    builders:
        - shell: |
            rm -rf data
            mkdir data
            <%- if scope.lookupvar('::aws_migration') %>
              HOSTNAME=$(govuk_node_list -c backend --single-node)
            <%- else -%>
              HOSTNAME="backend-1.backend"
            <%- end -%>
            git clone --branch release --depth 1 git@github.com:alphagov/transition-config.git data/transition-config
            git clone --depth 1 git@github.com:alphagov/transition-stats.git data/transition-stats
            git clone --depth 1 git@github.com:alphagov/pre-transition-stats.git data/pre-transition-stats
            rsync --delete -avz -e ssh data/transition-config deploy@$HOSTNAME:/var/apps/transition/data
            rsync --delete -avz -e ssh data/transition-stats deploy@$HOSTNAME:/var/apps/transition/data
            rsync --delete -avz -e ssh data/pre-transition-stats deploy@$HOSTNAME:/var/apps/transition/data
            ssh deploy@$HOSTNAME "cd /var/apps/transition && govuk_setenv transition bundle exec rake import:all"
    publishers:
        - trigger-parameterized-builds:
            - project: Bouncer_CDN
              condition: 'SUCCESS'
              trigger-with-no-params: true
    wrappers:
        - ansicolor:
            colormap: xterm
    parameters:
        - string:
            name: artefact_number
            description: 'Passed on down a chain to the Redirector Smokey job'
            default: false
    triggers:
        - timed: '@midnight'
