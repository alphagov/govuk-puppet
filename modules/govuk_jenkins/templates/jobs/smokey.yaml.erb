---
- scm:
    name: smokey_Smokey
    scm:
      - git:
          url: git@github.com:alphagov/smokey.git
          branches: [main]

- job:
    name: Smokey
    description: Task to run the smoke tests after each deploy.
    display-name: Smokey
    project-type: freestyle
    scm:
      - smokey_Smokey
    properties:
      - build-discarder:
          days-to-keep: 30
          artifact-num-to-keep: 5
    parameters:
      - string:
          name: TARGET_APPLICATION
          description: Application to target (optional).
    triggers:
      - timed: <%= @smokey_cron_schedule %>
    builders:
      - shell: |
          set +x
          export TARGET_PLATFORM=<%= @environment %>
          set -x
          ./jenkins.sh
    wrappers:
      - ansicolor:
          colormap: xterm
      - build-name:
          name: '#${BUILD_NUMBER}: ${ENV,var="TARGET_APPLICATION"}'
      - timeout:
          timeout: <%= @smokey_timeout %>
          fail: true
