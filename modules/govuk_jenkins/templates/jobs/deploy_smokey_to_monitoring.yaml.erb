---
- scm:
    name: smokey-repo
    scm:
        - git:
            url: git@github.com:alphagov/smokey.git
            branches:
              - master

- job:
    name: deploy-smokey-to-monitoring
    display-name: "Deploy Smokey to monitoring"
    description: "Deploy Smokey to monitoring machines so Icinga can run the tests in a loop."
    project-type: freestyle
    properties:
        - github:
            url: https://github.com/alphagov/smokey/
    scm:
      - smokey-repo
    builders:
        - shell: |
            export DEPLOY_TO=monitoring-1
            sh -x deploy.sh
    triggers:
        - timed: 'H 9 * * *'
