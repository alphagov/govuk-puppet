---
- job:
    name: transition_import_hits
    display-name: "Transition: daily hits import"
    project-type: freestyle
    description: "<p>Pulls daily hits from fastly logs and updates application statistics.</p>"
    logrotate:
      numToKeep: 30
    properties:
      - build-discarder:
          days-to-keep: 30
          artifact-num-to-keep: 5
    builders:
        - shell: |
            HOSTNAME=$(govuk_node_list -c backend --single-node)
            ssh deploy@$HOSTNAME "cd /var/apps/transition && govuk_setenv transition bundle exec rake import:all:hits[$BUCKET]"
    publishers:
      - trigger-parameterized-builds:
          - project: Success_Passive_Check
            condition: 'SUCCESS'
            predefined-parameters: |
                NSCA_CHECK_DESCRIPTION=<%= @service_description %>
                NSCA_OUTPUT=<%= @service_description %> success
          - project: Failure_Passive_Check
            condition: 'FAILED'
            predefined-parameters: |
                NSCA_CHECK_DESCRIPTION=<%= @service_description %>
                NSCA_OUTPUT=<%= @service_description %> failed
      - slack:
          team-domain: <%= @slack_team_domain %>
          auth-token-id: <%= @slack_credential_id %>
          auth-token-credential-id: <%= @slack_credential_id %>
          build-server-url: <%= @slack_build_server_url %>
          notify-failure: true
          room: <%= @slack_channel %>
          include-custom-message: true
          custom-message: "Transition daily hits import job failed in <%= @environment %>"
    wrappers:
        - ansicolor:
            colormap: xterm
    parameters:
        - string:
            name: BUCKET
            description: 'S3 bucket to fetch bouncer logs from'
            default: <%= @s3_bucket %>
    triggers:
        - timed: |
            TZ=Europe/London
            H 3 * * *
