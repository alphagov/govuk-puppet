---
- scm:
    name: cdn-configs_Bouncer_CDN
    scm:
        - git:
            url: git@github.com:alphagov/govuk-cdn-config.git
            branches:
              - master

- job:
    name: Bouncer_CDN
    display-name: "CDN: deploy Bouncer configs"
    project-type: freestyle
    description: "After a loading new site config into the Transition app, this job will make sure that the traffic hitting the CDN for those domains is routed to Bouncer."
    properties:
        - build-discarder:
            days-to-keep: 30
            artifact-num-to-keep: 5
        - github:
            url: https://github.com/alphagov/govuk-cdn-config/
    scm:
        - cdn-configs_Bouncer_CDN
    logrotate:
        numToKeep: 20
    builders:
        - shell: |
            export FASTLY_USER=<%= @cdn_username %>
            export FASTLY_SERVICE_ID=<%= @cdn_service_id %>
            FASTLY_DEBUG=TRUE ./deploy-bouncer.sh
    publishers:
        - trigger-parameterized-builds:
            - project: Success_Passive_Check
              condition: 'SUCCESS'
              predefined-parameters: |
                  NSCA_CHECK_DESCRIPTION=<%= @service_description %>
                  NSCA_OUTPUT=<%= @service_description %> success
            - project: Failure_Passive_Check
              condition: 'FAILED'
              predefined-parameters: |
                  NSCA_CHECK_DESCRIPTION=<%= @service_description %>
                  NSCA_OUTPUT=<%= @service_description %> failed
        - trigger:
            project: Smokey
            threshold: SUCCESS
    wrappers:
        - ansicolor:
            colormap: xterm
    parameters:
        - password:
            name: FASTLY_PASS
            description: Password for an account with our CDN provider
            <%- if @cdn_password_encrypted -%>
            default: <%= @cdn_password_encrypted %>
            <%- end -%>
        - string:
            name: APP_DOMAIN
            description: The domain that applications are deployed under
            <%- if @app_domain -%>
            default: <%= @app_domain %>
            <%- end -%>
