---
- scm:
    name: build_fpm_package
    scm:
        - git:
            url: https://github.com/alphagov/packager
            branches:
              - master
            wipe-workspace: true

- job:
    name: build_fpm_package
    display-name: Build fpm package
    project-type: freestyle
    properties:
        - build-discarder:
            days-to-keep: 30
            artifact-num-to-keep: 5
        - github:
            url: https://github.com/alphagov/packager/
    scm:
        - build_fpm_package
    wrappers:
        - workspace-cleanup
    parameters:
        - string:
            name: RECIPE
            description: The name of an fpm-cookery recipe
        - string:
            name: DISTRO
            description: Ubuntu distribution to target (trusty, xenial)
            default: trusty
    builders:
        - shell: |
            cd fpm/
            ./container-build.sh
    publishers:
        - archive:
            artifacts: 'fpm/recipes/*/pkg/*.deb'
