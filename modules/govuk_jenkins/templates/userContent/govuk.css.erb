#breadcrumbs::before {
  content: "<%= @theme_environment_name %>";
  float: left;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: bold;
  display: inline-block;
  background-color: <%= @theme_colour %>;
  margin: 0 8px 0 0;
  padding: 2px 8px;
  color: <%= @theme_text_colour %>;
  border-radius: 5px;
}

#jenkins-home-link {
  background: transparent url(header-crown.png) no-repeat center left;
  margin-left: 6px;
  display: inline-block;
  height: 47px;
  padding: 0 1em 0 2.75em;
}

#jenkins-home-link img {
  display: none;
}

#jenkins-home-link::after {
  content: "GOV.UK Jenkins";
  color: white;
  font-weight: normal;
  font-family: "GillSans", "Gill Sans MT", "Gill Sans", "Helvetica Neue", Arial, sans-serif;
  font-size: 24px;
  display: inline-block;
  padding: 7px 0 0;
}

#jenkins-home-link:hover::after {
  text-decoration: underline;
}
